<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.topoffers.topoffers.seller.fragments.UpdateProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_update_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_new_product"
            style="@style/Title" />

        <EditText
            android:id="@+id/et_update_product_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/title"/>

        <EditText
            android:id="@+id/et_update_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/price" />

        <EditText
            android:id="@+id/et_update_product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/quantity"/>

        <EditText
            android:id="@+id/et_update_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="8"
            android:gravity="top|left"
            android:maxLines="10"
            android:hint="@string/description" />

        <Button
            android:id="@+id/btn_update_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_product_button_text"/>
    </LinearLayout>

</FrameLayout>
